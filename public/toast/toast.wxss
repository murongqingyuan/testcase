.toast-out {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
  width: 100%;
  height: auto;
  display: flex;            
  justify-content: center;
  /* align-items: center; */
  margin-top: 40%;
}
.toast-out .toast-in {
  min-width: 100px;
  background: rgba(0, 0, 0, 0.7);
  padding: 6px;
  text-align: center;
  color: white;
  border-radius: 8px;
  max-width: 80%;
}
.toast-out .toast-in span {
  font-size: 30px;
}
.toast-out .toast-in .toast-txt {
  font-size: 14px;
}
.toast-icon{

  height: 60rpx;
  width: 60rpx;
}