/* public/loading/loading.wxss */

.bottom {
  height: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  font-weight: 800;
  letter-spacing: 5rpx;
  animation: masked 1.5s linear infinite;
  background: linear-gradient(to right, #efeeee 40%, rgb(255, 255, 255) 60%, #efeeee 80%);
  background-size: 350% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.center {
  z-index: 800;
  position: absolute;
  top: 50%;
  margin-top: -100rpx;
  height: 120rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  font-weight: 800;
  letter-spacing: 10rpx;
  animation: masked 1.5s linear infinite;
  background: linear-gradient(to right, #efeeee 40%, rgb(255, 255, 255) 60%, #efeeee 80%);
  background-size: 350% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

@keyframes masked {
  from {
    background-position: 0 0;
  }

  to {
    background-position: -100% 0;
  }
}

.imageBox {
  margin-top: 100rpx;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.base {
  height: 70rpx;
  padding: 10rpx;
  width: 70rpx;
  transform: rotateX(45deg) rotateZ(45deg);
  transform-style: preserve-3d;
  /* background-color: saddlebrown; */
}

.cube, .cube:after, .cube:before {
  content: '';
  float: left;
  height: 20rpx;
  position: absolute;
  width: 20rpx;
}

/* Top */

.cube {
  background-color: skyblue;
  position: relative;
  transform: translateZ(20rpx);
  transform-style: preserve-3d;
  transition: 0.25s;
  /* box-shadow: 13em 13em 1.5em rgba(0, 0, 0, 0.1); */
  animation: anim 1s infinite;
}

.cube:after {
  background-color: rgb(116, 191, 221);
  transform: rotateX(-90deg) translateY(20rpx);
  transform-origin: 100% 100%;
}

.cube:before {
  background-color: rgb(105, 181, 211);
  transform: rotateY(90deg) translateX(20rpx);
  transform-origin: 100% 0;
}

.cube:nth-child(1) {
  animation-delay: 0.05s;
}

.cube:nth-child(2) {
  animation-delay: 0.1s;
}

.cube:nth-child(3) {
  animation-delay: 0.15s;
}

.cube:nth-child(4) {
  animation-delay: 0.2s;
}

.cube:nth-child(5) {
  animation-delay: 0.25s;
}

.cube:nth-child(6) {
  animation-delay: 0.3s;
}

.cube:nth-child(7) {
  animation-delay: 0.35s;
}

.cube:nth-child(8) {
  animation-delay: 0.4s;
}

.cube:nth-child(9) {
  animation-delay: 0.45s;
}

@keyframes anim {
  50% {
    transform: translateZ(10rpx);
  }
}
