.mask {
  height: 100%;
  width: 100%;
  background-color: gray;
  position: fixed;
  top: 0%;
  left: 0%;
  opacity: 0.9;
  display: flex;
  justify-content: center;
  align-items: center;
   z-index: 999;
}

.main {
  z-index: 999;
  height: auto;
  width: 500rpx;
  background-color: gainsboro;
  opacity: 1;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -500rpx;
  margin-left: -250rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.title {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: salmon;
  letter-spacing: 4rpx;
  font-weight: 700;
  font-size: 40rpx;
  color: white
}

.input {
  height: 40rpx;
  margin: 0 0 0rpx 0;
  padding: 10rpx;
  border-bottom: 2rpx solid gray;
  border-radius: 0rpx;
  background-color: white;
}

.listView {
  height: 600rpx;
  width: 100%;
  background-color: white;
  overflow-y: scroll;
}

.item {
  min-height: 60rpx;
  margin: 0rpx 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  border-bottom: 1rpx solid gainsboro;
  text-align: center;
}

.footer {
  height: 60rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: salmon
}

.button {
  height: 60rpx;
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  margin: 0rpx;
  padding: 0rpx;
  border-radius: 0rpx;
  letter-spacing: 10rpx;
  background-color: salmon;
  color: white;
}
.searchHigh {
  color: #f00;
  pointer-events: none;
  text-align: start;
}

.searchDark {
  pointer-events: none;
  text-align: start;
}
.image_icon{
  height: 60rpx;
  width:60rpx;

  background-color: gainsboro;
  border-radius: 50%;
}