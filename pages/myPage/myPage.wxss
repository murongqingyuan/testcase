/* pages/myPage/myPage.wxss */

/* #07c160 */

page {
  height: 100%;
}

.main {
  background-color: ghostwhite;
  height: 100%;
  width: 100%;
}

.head {
  padding: 20rpx 20rpx 80rpx 20rpx;
  width: auto;
  height: auto;
  display: flex;
  background-color: white;
  border-bottom-right-radius: 20%;
  border-bottom-left-radius: 20%;
  box-shadow: 2rpx 2rpx 2rpx gray;
}

.head .image {
  height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.head .myInfo {
  padding: 0rpx 20rpx;
}

.head .name {
  font-size: 56rpx;
  font-weight: 700;
  letter-spacing: 10rpx;
  height: 40%;
  display: flex;
  justify-content: start;
  align-items: center;
}

.head .department {
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 5rpx;
  height: 20%;
  display: flex;
  justify-content: start;
  align-items: center;
}

.head .department .icon {
  height: 33rpx;
  width: 33rpx;
  margin-right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.head .department .leader {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 5rpx;
  height: 20%;
  display: flex;
  justify-content: start;
  align-items: center;
}

.head .myInfo .mobile {
  display: flex;
  justify-content: start;
  align-items: center;
}

.head .myInfo .mobile .icon {
  height: 33rpx;
  width: 33rpx;
  margin-right: 10rpx;
}

.head .myInfo .email {
  display: flex;
  justify-content: start;
  align-items: center;
}

.head .myInfo .email .icon {
  height: 33rpx;
  width: 33rpx;
  margin-right: 10rpx;
}

.head .myInfo .duty2 {
  display: flex;
  flex-flow: wrap;
  justify-content: start;
  align-items: center;
  max-width: 450rpx;
  background-color: #fff;
}

.duty2 .label {
  border-radius: 25rpx;
  border: 1rpx solid;
  border-color: gray;
  color: gray;
  background-color: gainsboro;
  width: auto;
  margin: 2rpx 5rpx;
  padding: 2rpx 10rpx;
  box-shadow: 1rpx 1rpx 1rpx gray;
  /* text-shadow: 1px 1px 1px gray; */
  font-size: 26rpx;
  /* line-height: 26rpx; */
  height: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.duty {
  display: flex;
  flex-flow: wrap;
  justify-content: start;
  align-items: center;
  width: auto;
  padding: 10rpx 40rpx 50rpx 40rpx;
  background-color: white;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
  box-shadow: 4rpx 4rpx 2rpx gray;
}

.duty .label {
  border-radius: 25rpx;
  border: 1rpx solid;
  border-color: gray;
  color: #fff;
  background-color: gainsboro;
  width: auto;
  margin: 2rpx 5rpx;
  padding: 2rpx 10rpx;
  box-shadow: 1rpx 1rpx 1rpx gray;
  text-shadow: 1px 1px 1px gray;
}

.router {
  height: 100rpx;
  background-color: gray;
  display: flex;
  justify-content: center;
  align-self: center;
  margin: -40rpx 10% 0rpx 10%;
  border-radius: 60rpx 60rpx 0rpx 0rpx;
  border: 2rpx solid gray;
  border-bottom: 0rpx;
  overflow: hidden;
}

.router .buttonOn {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0rpx;
  background-color: white;
  letter-spacing: 4rpx;
  font-size: 40rpx;
  color: skyblue;
}

.router .buttonOff {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0rpx;
  background-color: gainsboro;
  letter-spacing: 4rpx;
  font-size: 36rpx;
  color: gray;
}

.body {
  background-color: white;
  height: auto;
  margin: 0rpx 40rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 4rpx 4rpx 2rpx gainsboro;
}

.body .target {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.body .target .chart {
  height: 400rpx;
  width: 400rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 5rpx solid skyblue;
}

.chart .right {
  position: absolute;
  background-color: skyblue;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: rotateRight 0.4s forwards;
  opacity: 1;
}

.chart .right .smallCircle {
  position: absolute;
  background-color: white;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}

.chart .right .sx1 {
  position: absolute;
  background-color: #fff;
  width: 400rpx;
  height: 400rpx;
  clip-path: polygon(50% 0, 100% 0, 100% 100%, 50% 100%);
  border-radius: 50%;
}

.chart .right .sx2 {
  position: absolute;
  background-color: #fff;
  width: 400rpx;
  height: 400rpx;
  clip-path: polygon(0 0, 50% 0, 50% 100%, 0 100%);
  border-radius: 50%;
  transform: rotate(0deg);
}

@keyframes rotateRight {
  0% {
    transform: rotate(0deg);
    opacity: 0;
  }

  50% {
    transform: rotate(0deg);
    opacity: 0;
  }

  100% {
    transform: rotate(-180deg);
    opacity: 1;
  }
}

.chart .left {
  position: absolute;
  background-color: skyblue;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: rotateLeft 0.25s forwards;
  opacity: 1;
  transform: rotate(180deg);
}

.chart .left .smallCircle {
  position: absolute;
  background-color: white;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}

.chart .left .sx1 {
  position: absolute;
  background-color: #fff;
  width: 400rpx;
  height: 400rpx;
  clip-path: polygon(50% 0, 100% 0, 100% 100%, 50% 100%);
  border-radius: 50%;
}

.chart .left .sx2 {
  position: absolute;
  background-color: #fff;
  width: 400rpx;
  height: 400rpx;
  clip-path: polygon(0 0, 50% 0, 50% 100%, 0 100%);
  border-radius: 50%;
  transform: rotate(0deg);
}

.chart .mask {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  clip-path: polygon(50% 0, 100% 0, 100% 100%, 50% 100%);
  background-color: #fff;
  opacity: 1;
  animation: mask 0.45s forwards;
}

@keyframes rotateLeft {
  0% {
    transform: rotate(180deg);
    opacity: 0;
  }

  100% {
    transform: rotate(0deg);
    opacity: 1;
    clip-path: polygon(0 0, 50% 0, 50% 100%, 0 100%);
  }
}

@keyframes mask {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}

.chart .process {
  position: absolute;
  height: 300rpx;
  width: 300rpx;
  background-color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  border: 2rpx solid skyblue;
}

.body .target .data {
  margin-top: 20rpx;
}
