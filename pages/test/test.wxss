page {
  height: 100%;
}

/* box-shadow: -6rpx -6rpx 16rpx rgba(255, 255, 255, 0.9),
                6rpx 6rpx 16rpx rgba(217, 210, 200, 0.6); */

.main {
  background: linear-gradient(to top, #101c3e, white);
  filter: blur(2px);
}

.card {
  margin: 20rpx;
  padding: 20rpx;
  height: 300rpx;
  background-color: #22305b;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 16rpx 8rpx #7886b0;
  color: white;
}

.card:hover {
  box-shadow: 0rpx 0rpx 16rpx 8rpx rgba(255, 255, 255, 0.9);
}

.item {
  height: 60rpx;
  width: 100%;
  font-size: 40rpx;
  font-weight: 700;
}

.main2 {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: wheat;
  padding-top: 500rpx;
}
