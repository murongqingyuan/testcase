/* pages/detailBxd/detailBxd.wxss */

page {
  height: 100%;
  width: 100%;
  background-color: #efeeee;
}

.main {
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  padding-bottom: 150rpx;
  overflow-x: hidden;
}

.submiter {
  height: auto;
  width: 100%;
  padding: 20rpx;
  display: flex;
  border-bottom: 4rpx dashed gray;
}

.submiter .image {
  height: 140rpx;
  width: 140rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.submiter .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0rpx 50rpx;
}

.info .name {
  font-size: 50rpx;
  letter-spacing: 10rpx;
}

.info .department {
  font-size: 32rpx;
  letter-spacing: 3rpx;
}

.steps {
  margin-top: 20rpx;
  height: 60rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.steps .step {
  width: 60rpx;
  height: 60rpx;
  background-color: gainsboro;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 2rpx gainsboro;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}

.steps .stepR {
  width: 60rpx;
  height: 60rpx;
  background-color: skyblue;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 2rpx gainsboro;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

